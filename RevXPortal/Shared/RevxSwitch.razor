@inject IJSRuntime jsRuntime
<style>
    .custom-switch * {
        cursor: pointer;
    }
</style>

<div class="custom-control custom-switch">
    <input type="checkbox" checked="@Value" class="custom-control-input" id="@random" @onchange="OnChange">
    <label class="custom-control-label" for="@random"></label>
</div>

@code {
    public int random { get; set; } = new Random().Next();

    [Parameter]
    public EventCallback<bool> ValueChanged { get; set; }

    [Parameter]
    public bool Value { get; set; }

    private async void OnChange(ChangeEventArgs e)
    {
        Value = (bool)e.Value;
        await ValueChanged.InvokeAsync(Value);
    }
}
