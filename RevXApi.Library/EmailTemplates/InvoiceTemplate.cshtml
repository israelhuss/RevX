@using System 

<!DOCTYPE html>
<head>
    @*<link href="@($"{System.IO.Directory.GetCurrentDirectory()}/wwwroot/css/bootstrap.min.css")" rel="stylesheet" />*@
    <style>
        html,
        body {
            font-family: Nunito,"Helvetica Neue",Helvetica,Arial,sans-serif;
            box-sizing: border-box;
        }
        .outer-table {
            width: 60%;
            margin: 0 auto;
            text-align: center;
        }

        .table {
            width: calc(100% + 2px);
            border-collapse: collapse;
            color: rgb(33,37,41);
            border-spacing: 2px;
        }
        .table-bordered th {
            border: solid 1px rgb(222, 226, 230);
            font-size: 20px;
            padding: .75rem;
        }
        .table-bordered td {
            border: solid 1px rgb(222, 226, 230);
            padding: .75rem;
        }

        .table-striped tbody tr:nth-child(odd) {
            background-color: rgba(0, 0, 0, 0.06);
        }

        img + div {
            display: none;
        }
    </style>
</head>
<body>

    <table class="outer-table">
        <tbody>
            <tr>
                <td>
                    <h1>March 2021</h1>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="invoice-table-container">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Student</th>
                                    <th>Date</th>
                                    <th>Start Time</th>
                                    <th>End Time</th>
                                    <th>Notes</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Sessions)
                                {
                                    <tr>
                                        <td>@($"{@item.Student.FirstName} {@item.Student.LastName}")</td>
                                        <td>@item.Date.ToShortDateString()</td>
                                        <td>@item.StartTime</td>
                                        <td>@item.EndTime</td>
                                        <td>@item.Notes</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <h2 style="text-align: end;">Total Hours: 25</h2>
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td style="padding: 2rem;">
                    <p style=" display: flex; width: max-content; margin-left: auto; margin-right: auto;">
                        <span style="font-weight: bold;">Powered by:</span>
                        <span style="line-height: 1;">
                            <img src="https://timcohussstorage.blob.core.windows.net/revxlogo/Logo-text.jpg" alt="RevX" style="height: 1.1rem; margin-left: .5rem;" />
                        </span>
                    </p>
                </td>
            </tr>
        </tfoot>
    </table>
    
</body>